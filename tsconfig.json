{
  "compilerOptions": {
    "module": "ES2015",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015"],
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "target": "ES6",
    "paths": {
      "spotify": ["."]
    }
  },
  "include": ["src/**/*"]
}
